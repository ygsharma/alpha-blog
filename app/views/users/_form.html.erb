<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors', obj: @user %>
            <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="row mb-3">
                    <%= f.label :username, class: "col-sm-2 col-form-label text-light" %></br>
                    <div class="col-sm-10">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
                    </div>
                </div>
                <div class="row mb-3">
                    <%= f.label :email, class: "col-sm-2 col-form-label text-light" %></br>
                    <div class="col-sm-10">
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
                    </div>
                </div>
                <div class="row mb-3">
                    <%= f.label :password, class: "col-sm-2 col-form-label text-light" %></br>
                    <div class="col-sm-10">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
                    </div>
                </div>
                <div class="row mb-3 justify-content-center">
                    <%= f.submit(@user.new_record? ? "Sign Up" : "Update account", class: "btn btn-outline-light btn-lg col-2") %>
                </div>
            <% end %>
            <div class="row justify-content-center">
                <div class="col-sm-4">
                    <%= link_to '[ Cancel and Return to Users Listing ]', users_path, class: "link-info" %>
                </div>
            </div>
        </div>
    </div>
</div>