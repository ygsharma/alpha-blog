<%= render 'shared/errors', obj: @category %>
    <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="row mb-3">
            <%= f.label :name, "Category Name", class: "col-sm-2 col-form-label text-light" %></br>
            <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category name" %>
            </div>
        </div>
        <div class="row mb-3 justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg col-2" %>
        </div>
<% end %>