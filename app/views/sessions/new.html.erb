<h1 class="text-center mt-4">Log in</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with(scope: :session, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="row mb-3">
                    <%= f.label :username, class: "col-sm-2 col-form-label text-light" %></br>
                    <div class="col-sm-10">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter your username" %>
                    </div>
                </div>
                <div class="text-center mb-4 text-white">
                Or
                </div>
                <div class="row mb-3">
                    <%= f.label :email, class: "col-sm-2 col-form-label text-light" %></br>
                    <div class="col-sm-10">
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
                    </div>
                </div>
                <div class="row mb-3">
                    <%= f.label :password, class: "col-sm-2 col-form-label text-light" %></br>
                    <div class="col-sm-10">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
                    </div>
                </div>
                <div class="row mb-3 justify-content-center">
                    <%= f.submit 'Log in', class: "btn btn-outline-light btn-lg col-2" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
