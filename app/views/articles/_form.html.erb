<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors' %>
            <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="row mb-3">
                    <%= f.label :title, class: "col-sm-2 col-form-label text-light" %></br>
                    <div class="col-sm-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
                    </div>
                </div>
                <div class="row mb-3">
                    <%= f.label :description, class: "col-sm-2 col-form-label text-light" %></br>
                    <div class="col-sm-10">
                        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
                    </div>
                </div>

                <div class="row mb-3 justify-content-center">
                    <%= f.submit class: "btn btn-outline-light btn-lg col-2" %>
                </div>
            <% end %>
            <div class="row justify-content-center">
                <div class="col-sm-4">
                    <%= link_to '[ Cancel and Return to Articles Listing ]', articles_path, class: "link-info" %>
                </div>
            </div>
        </div>
    </div>
</div>